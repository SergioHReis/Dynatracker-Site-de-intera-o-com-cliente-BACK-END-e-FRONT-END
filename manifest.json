{
  "manifest_version": 2,
  "name": "Minha Extensão",
  "version": "1.0",
  "description": "Descrição da minha extensão",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    "icons/pin-32.png",
    "assets/*"
  ]
}
